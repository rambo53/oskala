@inherits System.Web.Mvc.WebViewPage
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<script>

    var model = JSON.parse('@Html.Raw(Json.Encode(Model))');

    if (model) {
        Swal.fire({
            icon: 'error',
            title: model.errorMessage,
            text: '',
        });
    }

</script>

<div class="bg-slide1 h-100 d-flex flex-column">
    <div class="d-flex align-items-center h-100">
        <div class="filigran" id="filigran"></div>
        <div id="containerResa" class=" row c-center m-0 border-0 w-100">
            <div id="loginDialogContainer" class="col-11 col-sm-7 col-lg-5 col-xl-4 mxw500 p-0 border-0">
                <div id="loginAccount" class="card m-0 border-0 h-100">
                    <div class="card-header m-0 alt-color">
                        <div id="aupd_resa_title" class="float-left">
                            <h3 class="force-bold-500 text-white" data-i18n="page.titlelogin">Se Connecter</h3>
                        </div>
                        <div class="float-right">
                            <h3 class="force-bold-500 text-white"><i class="fa fa-sign-in-alt"></i></h3>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="overlapping-circle">
                        </div>
                        <div id="reqAuth">

                            <form id="frmUsrLogin" class="p-3" method="post" action="@Url.Action("Connect", "Login")"  novalidate="novalidate">
                                <!--autocomplete="off"-->
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                                        </div>
                                        <input id="usrLogin" name="username" type="text" class="form-control" placeholder="Utilisateur" data-i18n="[placeholder]page.username" autocomplete="on" minlength="5" required="required" aria-required="true" aria-label="Utilisateur">
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-lock"></i></span>
                                        </div>
                                        <input id="usrPwd" name="password" type="password" class="form-control" placeholder="Mot de Passe" data-i18n="[placeholder]page.password" autocomplete="off" minlength="2" required="required" aria-required="true" aria-label="Mot de Passe">
                                    </div>
                                    <div class="text-right"><a href="../Home/ResetPassword" class="btn-link" data-i18n="page.forgotpwd">Mot de passe oublié ?</a></div>
                                </div>

                                <!--<div class="col-md-6 checkbox checkbox-success checkbox-inline"><input type="checkbox" value="3" data-id="3" id="stayConnected" checked=""><label for="stayConnected">Rester Connecté</label></div>-->
                                <div class="mt-3 text-right mb-3 row justify-content-center">
                                    <input id="submitLogin" type="submit" class="btn btn-block text-bold bg-success-alt col-5" data-html="true" data-delay="{&quot;show&quot;: 100, &quot;hide&quot;: 1000}" data-placement="bottom" data-i18n="general.connect" data-original-title="" title="" value="Connexion">
                                </div>
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="stayConnected" name="rememberme" value="3" data-id="3" checked="">
                                    <label class="custom-control-label" for="stayConnected" data-i18n="page.remember">Rester Connecté</label>
                                </div>

                                <div class="mt-3 d-flex justify-content-between">
                                    <label class="mt-2">Pas encore de compte?</label>
                                    <a href="../Home/RegisterSub" class="btn btn-outline-success ">S'inscrire</a>
                                </div>


                                <!--checkbox-success-->
                            </form>
                        </div>
                        <div id="prgAuth" class="text-center hidden">
                            <div id="progress" class="progresspanel loading">
                                <div>
                                    <img id="descimg" class="img-responsive">
                                </div>
                                <div>
                                    <!-- <img src="Media/start.png" />-->
                                    <span id="desctxt" data-i18n="page.connecting">Connexion en cours...</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer d-none">
                        <div data-i18n="page.noaccount">
                            Pas encore de compte ?&nbsp;<a href="/login/signup" id="btnSignUp" class="btn btn-fs-prim silent"><span data-i18n="general.signup">Créer votre compte</span></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script src="~/Scripts/src/formLoginValidate.js"></script>